<div id="listings" v-cloak>
  
  <div class="p-3 mb-2 bg-info text-white">
    <h1>Listings</h1>
  </div>

  <div class="container contaner-lg">

    <form v-bind:action="listView" method="get">
      <div class="row mt-5">
        <div class="col-md-10 pb-4">
          <div class="filter-bar">
            <div class="form-row">
              <div class="col-md-4">
                <div class="search-field">
                  <input type="text" class="form-control" id="name" name="name" v-model="formData.name" placeholder="Search..." >
                </div>
              </div>

              <div class="col-md-2 ">
                <select class="form-control selectpicker mr-sm-2 pr-2" style="color: #000;" v-model="formData.productType" name="productType" placeholder="">
                  <option class="d-none" value="">Filter by type</option>
                  <option value="Cardboard">Cardboard</option>
                  <option value="Metal">Metal</option>
                  <option value="Paper">Paper</option>
                  <option value="Plastic">Plastic</option>
                  <option value="Textiles">Textiles</option>
                  <option value="Wood">Wood</option>
                </select>
              </div>

             <div class="col">
              <button type="submit" class="btn btn-dark">
                <i class="fa fa-search fa-lg" aria-hidden="true"></i>
              </button>
             </div>
            </div>
          </div>
        </div>
      </div>

    </form>
    
    
    <div class="row">
      <div class="col pt-4" v-for="(item, index) in data" :class="{ 'col': index < (data.length - (data.length % 3)), 'col-4': index === (data.length - 2) && data.length % 3 === 1, 'd-none': index === (data.length - 1) && data.length % 3 === 1, 'col-4': index === (data.length - 1) && data.length % 3 === 2, 'd-none': index === (data.length) && data.length % 3 === 2 }">
        <div class="card" style="width: 20rem;">
          <img class="card-img-top" :src=item.productImage.url alt="product_img" style="width: 100%;height:250px;">
          <div class="row pt-4 pl-4">  
            <div class="text-center col-6 product-info">
              <div class="d-flex justify-content-center align-items-center">
                <img src="/images/location.svg" class="img-fluid" width="15px" style="margin-right:10px">
                <label class="mb-0">{{item.location}}</label>
              </div>
            </div>
            <div class="text-center col-6 product-info">
              <div class="d-flex justify-content-center align-items-center">
                <img src="/images/weight.svg" class="img-fluid" width="15px" style="margin-right:10px">
                <label class="mb-0">{{item.weight}} Kg</label>
              </div>
            </div> 
          </div>
          <div class="card-body">
            <p class="card-title" style="font-weight: 800;">{{item.name}}</p>
            <hr>
            <div class="d-flex justify-content-center align-items-center">
              <a class="btn btn-primary" :href="`/productitem/${item.id}`">View Product</a>
            </div>
            <hr>
            <p class="text-small text-center">#{{item.id}}</p>
            <p style="text-align: center;">{{item.type}}</p>
          </div>
        </div>
      </div>
    </div>
    

      <div v-if="data.length == 0 ">
        <tr>
          <td colspan="4" class="text-center p-5">
            <br>
          <img src="/images/sad.svg" class="img-fluid mx-auto" alt="" width="20px">
          <small>No Data Found</small>
          <br>
        </td>
        </tr>
      </div>
  
  </div>




</div>
<%- /* Expose server-rendered data as window.SAILS_LOCALS :: */ exposeLocalsToBrowser() %>